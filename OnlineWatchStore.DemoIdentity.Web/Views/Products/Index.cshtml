@model Product

@using OnlineWatchStore.Domain


@{
    if (Model == null)
    {
        ViewData["Title"] = "EmptyProductCard";
        await Html.RenderPartialAsync("_EmptyProductCard");
    }
    else
    {
        ViewData["Title"] = Model.Name;
        await Html.RenderPartialAsync("_ProductCard", Model);
    }
}
