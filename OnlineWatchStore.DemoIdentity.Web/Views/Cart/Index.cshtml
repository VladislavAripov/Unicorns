@{
  ViewData["Title"] = "Products cart";
}

<link rel="stylesheet" href="~/css/Cart/cart.css">

<div class="container">
  <div class="row table-wrapper">
    <table class="table table-striped table-warning">
      <thead>
      <tr>
        <th scope="col">Наименование продукта</th>
        <th scope="col">Количество</th>
        <th scope="col">Цена</th>
      </tr>
      </thead>
      <tbody>
      @for (int i = 0; i < 100; i++)
      {
        <tr class="to-close">
          <td>Watch's name</td>
          <td>1</td>
          <td>123123132 ₽  <btn>✖</btn></td>
        </tr>
      }
      <tr class="table-dark to-close">
        <td><strong>Итого:</strong></td>
        <td><strong>2</strong></td>
        <td><strong>1111111</strong></td>
      </tr>
      </tbody>
    </table>
  </div>
  <div class="row button-wrapper justify-content-end">
    <div class="col-2">
      <button type="button" class="btn btn-secondary margin-top-10 btn-lg">Оформить заказ</button>
    </div>
  </div>
</div>

<script src="lib/jquery-latest.js"></script>
<script src="~/js/Cart/closeButton.js"></script>